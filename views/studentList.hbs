<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>All Students</title>
        <!-- CSS only -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    </head>
    <body>
        <div class="container-md">
            {{#if title}}
                <h2>{{title}}</h2>
            {{/if}}
            <a href="/auth/logout" class="btn btn-primary">Log Out</a>
            <a href="/addStudent" class="btn btn-secondary">Add Student</a>
            <table class="table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Email</th>
                        <th>Course</th>
                        <th>Course Description</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    {{#if message}}
                    <h2>{{message}}</h2>
                    {{/if}}
                    {{#each data}}
                        <tr>
                            <td>{{this.student_id}}</td>
                            <td>{{this.first_name}}</td>
                            <td>{{this.last_name}}</td>
                            <td>{{this.email}}</td>
                            <td>{{this.course_name}}</td>
                            <td>{{this.course_desc}}</td>
                            <td>
                                <a href="/auth/updateStudentForm/{{this.email}}"class="btn btn-info btn-sm">Edit</a>
                                <a href="/auth/deleteStudent/{{this.email}}"class="btn btn-danger btn-sm" onclick="return confirm('Are you sure about that?')">Delete</a>
                            </td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
        
        
        <!-- JavaScript Bundle with Popper -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
        
    </body>
</html>